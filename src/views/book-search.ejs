<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="./../css/index.css">
    <title>WEBAPP PROJECT</title>
</head>

<body>
    <%- include('partials/navbar') %>
        <!-- Section: Products v.1 -->
<section class="text-center my-5">

  <!-- Section heading -->
  <!-- Section description -->


  <!-- Grid row -->
  <div class="row">
    <% books.items.forEach(function(element){ %>
    <div class="col-lg-2 col-md-6 mb-lg-0 mb-4">
      <div class="card card-cascade narrower card-ecommerce">
        <div class="view view-cascade overlay">
          <a href="<%= element.volumeInfo.infoLink %>">
            <img src="<%= element.volumeInfo.imageLinks.thumbnail %>" class="card-img-top"
            alt="sample photo">
          </a>
          <a>
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>
        <div class="card-body card-body-cascade text-center">
          <h4 class="card-title">
            <strong>
              <a> <%= element.volumeInfo.title %></a>
            </strong>
          </h4> 
          <div >
            <span class="float-left font-weight-bold">
              <strong> Author:<%=  element.volumeInfo.authors[0] %></strong>
            </span>
            <span class="float-right">
              <a data-toggle="tooltip" data-placement="top" title="Add to Cart">
                <i class="fas fa-shopping-cart grey-text ml-3"></i>
              </a>
              <a data-toggle="tooltip" data-placement="top" title="Share">
                <i class="fas fa-share-alt grey-text ml-3"></i>
              </a>
              <a class="active" data-toggle="tooltip" data-placement="top" title="Added to Wishlist">
                <i class="fas fa-heart ml-3"></i>
              </a>
            </span>
          </div>
        </div>
        <!-- Card content -->
      </div>
      <!-- Card -->
    </div>
    <% }) %>
    <!-- Grid column -->


  </div>
  <!-- Grid row -->

</section>
<!-- Section: Products v.1 -->
